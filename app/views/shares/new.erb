<h1>Share Password</h1>

<div>
  <%= form_with model: [@user_password], url: password_shares_path(@password) do |form| %>
    <div>
      <%= form.label :user_id %>
      <%= form.collection_select :user_id, @users, :id, :email %>
    </div>

    <div>
      <%= form.label :role %>
      <%= form.select :role, UserPassword::ROLES.map { |role| [role.titleize, role] } %>
    </div>

    <div class="my-5">
      <%= form.submit "Share" %>
    </div>
  <% end %>
</div>
